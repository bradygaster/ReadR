@inherits LayoutComponentBase

<div class="page">
    @Body
</div>

<div id="blazor-error-ui" data-nosnippet>
    <span class="error-icon">⚠️</span>
    <span class="error-message">An unhandled error has occurred.</span>
    <button class="error-action" onclick="location.reload()">Reload</button>
    <button class="error-dismiss" onclick="document.getElementById('blazor-error-ui').style.display='none'">×</button>
</div>
