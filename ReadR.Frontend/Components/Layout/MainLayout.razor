@using Microsoft.JSInterop
@using Microsoft.AspNetCore.Components
@inject IJSRuntime JSRuntime
@inject NavigationManager Navigation
@inherits LayoutComponentBase

<div class="app-container">
    <aside class="sidebar">
        <div class="sidebar-header">
            <div class="logo">
                <span class="logo-icon">📖</span>
                <span class="logo-text">ReadR</span>
            </div>
        </div>
        
        <nav class="sidebar-nav">
            <a href="/" class="nav-item @(IsActive("/") ? "active" : "")">
                <span class="nav-icon">🏠</span>
                <span class="nav-text">Home</span>
            </a>
        </nav>
    </aside>

    <main class="main-content">
        <div class="content-wrapper">
            @Body
        </div>
    </main>
</div>

<div id="blazor-error-ui" data-nosnippet>
    <span class="error-icon">⚠️</span>
    <span class="error-message">An unhandled error has occurred.</span>
    <button class="error-action" onclick="location.reload()">Reload</button>
    <button class="error-dismiss" onclick="document.getElementById('blazor-error-ui').style.display='none'">×</button>
</div>

@code {
    private bool IsActive(string path)
    {
        var currentPath = new Uri(Navigation.Uri).AbsolutePath;
        if (path == "/" && currentPath == "/")
            return true;
        if (path != "/" && currentPath.StartsWith(path, StringComparison.OrdinalIgnoreCase))
            return true;
        return false;
    }
}
