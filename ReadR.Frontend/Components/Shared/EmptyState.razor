    [Parameter] public string Icon { get; set; } = "ðŸ“š";
    [Parameter] public string Title { get; set; } = "No items found";
    [Parameter] public string Message { get; set; } = "Check back later for updates.";
    [Parameter] public string ActionIcon { get; set; } = "ðŸ”„";
    [Parameter] public string ActionText { get; set; } = "Refresh";
    [Parameter] public EventCallback OnAction { get; set; }
}
